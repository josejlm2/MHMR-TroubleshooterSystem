= content_for(:title, "Ticket Month Summary for #{@Month}, #{Date.today.year}")
.pure-u-1
 %table#ticketMonthSummary.pure-table.pure-table-bordered
  %thead
   %th  Location
   %th  # Open
   %th  # Closed
  %tbody
  - @LocationStats.each do |stats|
   %tr{:class => cycle('','pure-table-odd')}
    %td= stats[0]
    %td= stats[1]
    %td= stats[2]
 %br 
  %table#ticketMonthSummary.pure-table.pure-table-bordered
   %thead
    %th  Category
    %th  # Open
    %th  # Closed
   %tbody
   - @CategoryStats.each do |stats|
    %tr{:class => cycle('','pure-table-odd')}
     %td= stats[0]
     %td= stats[1]
     %td= stats[2]
