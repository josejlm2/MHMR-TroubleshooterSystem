= content_for(:title, "Create New Location")

.pure-u-1
 = form_tag locations_path, :method => :post, :class => "pure-form pure-form-stacked" do
  = label :location, :name, 'Location Name'
  = text_field :location, :name
  = submit_tag 'Create Location', :class => "pure-button pure-button-success"

